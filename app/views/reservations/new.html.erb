<h1>予約内容確認</h1>

<%= render "shared/error", obj: @reservation %>

<h3>￥<%= @reservation.room.price %>/ 日</h3>
<%= form_with model: @reservation, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <th><%= f.date_field :start_date, :readonly => true %></th>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <th><%= f.date_field :end_date, :readonly => true %></th>
    </tr>
    <tr>
      <th>使用日数</th>
      <th><%= @days %>日</th>
    </tr>
    <tr>
      <th><%= f.label :num_of_people, "人数" %></th>
      <th><%= f.number_field :num_of_people, :readonly => true %></th>
    </tr>
    <tr>
      <th>合計金額</th>
      <th><%= @sum %></th>
    </tr>
  </table>
  
  <%= f.hidden_field :room_id %>
  <%= f.hidden_field :user_id %>
  <%= f.submit '予約する' %>
<% end %>

<%= link_to  "戻る", room_path(@reservation.room.id) %>
