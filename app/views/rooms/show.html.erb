<h1>ルーム詳細</h1>

<table>
  <tr>
    <th>ルーム画像</th>
    <td><%= image_tag @room.image, size: "100x100" %></td>
  </tr>
  <tr>
    <th>ルーム名</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @room.address %></td>
  </tr>
  <tr>
    <th>ルーム紹介</th>
    <td><%= @room.content %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @room.price %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= link_to "一覧に戻る", rooms_posts_path %></li>
  </ul>
</div>

<h1>予約内容</h1>

<%= form_with(model: @reservation, url: new_reservation_path(@reservation), method: :get, local: true) do |f| %>
  <table>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <th><%= f.date_field :start_date %></th>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <th><%= f.date_field :end_date %></th>
    </tr>
    <tr>
      <th><%= f.label :num_of_people, "人数" %></th>
      <th><%= f.number_field :num_of_people %></th>
    </tr>
  </table>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "予約する" %>

<% end %>
